<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.HomeScreen"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/custom_gradient"
                android:textSize="14sp"
                app:title="HomeBank" />
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/half_circle">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="98dp"
                android:text="Баланс:"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="30sp"

                tools:ignore="MissingConstraints" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.04">
        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/custom_gradient" />

    </LinearLayout>

    <Button
        android:id="@+id/transactions"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9700"
        android:drawableLeft="@drawable/transaction_icon"
        android:drawablePadding="4dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_gravity="center_horizontal"
        android:text="Транзакции"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transactions_history"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9700"
        android:drawableLeft="@drawable/transaction_history_icon"
        android:drawablePadding="4dp"
        android:paddingLeft="65dp"
        android:paddingRight="60dp"
        android:layout_gravity="center_horizontal"
        android:text="История на транзакции"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.600" />

    <Button
        android:id="@+id/debts"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9700"
        android:drawableLeft="@drawable/debt_icon"
        android:drawablePadding="4dp"
        android:paddingLeft="57dp"
        android:paddingRight="85dp"
        android:layout_gravity="center_horizontal"
        android:text="Дългове"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.700" />

    <Button
        android:id="@+id/savings"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9700"
        android:text="Спестявания"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:drawableLeft="@drawable/savings_icon"
        android:drawablePadding="4dp"
        android:paddingLeft="57dp"
        android:paddingRight="51dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.800" />

    <Button
        android:id="@+id/scheduling"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9700"
        android:text="Планове"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:drawableLeft="@drawable/schedule_icon"
        android:drawablePadding="4dp"
        android:paddingLeft="60dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

</androidx.constraintlayout.widget.ConstraintLayout>